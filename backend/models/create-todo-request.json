{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "create todo",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "dueDate": {
      "type": "string",
      "pattern": "^\\d{4}\\-(0[1-9]|1[012])\\-(0[1-9]|[12][0-9]|3[01])$"
    }
  },
  "required": ["title", "dueDate"],
  "additionalProperties": false
}
